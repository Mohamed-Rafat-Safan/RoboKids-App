<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoboKidsApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/medium</item>

        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="android:itemBackground">@color/white</item>


<!--         hide scrollview stick from fragment-->
        <item name="android:scrollbarThumbVertical">@null</item>


    </style>


    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#E91E63</item>
        <item name="android:progressTint">#E91E63</item>
        <item name="android:thumbTint">#E91E63</item>

    </style>


    <style name="BoardLines" parent="Theme.RoboKidsApp">
        <item name="android:background">@color/black</item>
    </style>


</resources>